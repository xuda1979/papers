    ]
        % Mean with error bars instead of fill-between to avoid numeric instabilities
        \addplot+[blue, thick, mark=*,
            error bars/.cd, y dir=both, y explicit]
            table[x=time, y=mean_S, y error=std_S] {pagecurve_v3.dat};
        \addlegendentry{HMC Toy Model (Mean $\pm$1$\sigma$)}
        \addplot[black, dashed, thick] table[x=time, y=ideal_page] {pagecurve_v3.dat};
        \addlegendentry{Ideal Page Curve}
