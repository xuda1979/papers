\begin{axis}[
    width=0.8\textwidth,
    height=0.5\textwidth,
    xlabel={Steps},
    ylabel={$S(R_{\le n})$ (bits)},
    xmin=0, xmax=20,
    legend pos=north east,
    grid=major
]
\addplot[name path=upper64, draw=none] table[x=time,y=upper_S]{mps_page_chi64_embed.dat};
