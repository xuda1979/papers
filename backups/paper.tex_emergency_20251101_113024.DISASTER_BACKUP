\subsection{From a single-cut proxy to a full process-tensor MPO}\label{sec:pt-mpo}
% (previous content retained, add a multi-cut algorithm)

\begin{algorithm}[htbp]
\caption{Multi-cut maximum-entropy completion for $S(R_{\le n})$}
\label{alg:multicut}
\begin{algorithmic}[1]
\State \textbf{Input:} set of two-cut entropies $\{S(R_{\le k}|R_{>k}MI)\}_{k=1}^{n-1}$ measured via low-$\chi$ MPS; local marginals on windows of size $w$ around $k$; tolerance $\epsilon$.
\State Initialize a convex program for a global state $\hat{\rho}_{R_{\le n}R_{>n}MI}$ that matches all supplied marginals within $\epsilon$ in trace distance.
\State Maximize $S(\hat{\rho}_{R_{\le n}})$ over feasible $\hat{\rho}$.
\State \textbf{Output:} $\widehat{S}(R_{\le n})$ with dual certificates validating consistency; use as a bias-corrected estimator for the global radiation entropy.
\end{algorithmic}
\end{algorithm}

\paragraph{Large-scale PT--MPO demonstration.}
Building on Alg.~\ref{alg:ptmpo} and Alg.~\ref{alg:multicut}, we compress the HMC process tensor to finite memory depth $\ell_{\rm mem}$ and evaluate $S(R_{\le n})$ up to $N\sim 10^2$ emissions by contracting only radiation legs and renormalizing the time bonds. Figure~\ref{fig:ptmpo_page_large} shows a \emph{large-scale} Page curve with a clear turnover near $n\simeq S_0/2$, obtained under a $(\ell_{\rm mem}\!=\!5)$ surrogate with certified small discarded weight and frame-potential gap. Table~\ref{tab:ptmpo_scaling} reports resources and error certificates across lengths.

